mode "wallpaper" {
        bindsym j exec --no-startup-id ~/tools/bin/apod-bg -jump 1
        bindsym k exec --no-startup-id ~/tools/bin/apod-bg -jump -1
        bindsym i exec --no-startup-id ~/tools/bin/apod-bg -info
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+p mode "wallpaper"
